    restart: unless-stopped

  jackett:
    image: lscr.io/linuxserver/jackett:latest
    container_name: jackett
    environment:
      - PUID=1000
      - PGID=1002
      - TZ=America/Mexico_City
      - AUTO_UPDATE=true #optional
      - RUN_OPTS= #optional
    volumes:
      - /docker/jacket/data:/config
      - /docker/jacket/blackhole:/downloads
    ports:
      - 9117:9117
    restart: unless-stopped

  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    environment:
      - PUID=1000
      - PGID=1002
      - TZ=America/Mexico_City
      - VERSION=docker
    volumes:
      - /docker/plex/library:/config
      - /series:/tv
      - /docker/plex/movies:/movies
