  proxy:
    image: 'jc21/nginx-proxy-manager:latest'
    restart: unless-stopped
    ports:
      - '80:80'
      - '81:81'
      - '443:443'
    volumes:
      - /etc/nginx/data:/data
      - /etc/nginx/letsencrypt:/etc/letsencrypt